{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "indentation": 2,
    "max-line-length": [100, { "ignore": ["comments", "url"] }],
    "block-no-empty": true,
    "color-no-invalid-hex": true,
    "declaration-no-important": true,
    "no-descending-specificity": true,
    "string-quotes": "double"
  }
}
